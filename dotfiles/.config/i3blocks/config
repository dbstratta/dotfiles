# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
align=center
min_width=100
markup=none

[volume]
label= :
instance=Master
interval=2
signal=10
command=/usr/lib/i3blocks/volume 5 pulse

[memory]
label= :
interval=30

[disk]
label= :
interval=60

[wifi]
interval=10

[cpu_usage]
label=CPU
interval=10
min_width=CPU: 100.00%

